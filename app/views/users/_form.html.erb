<%= error_explanation(@user) %>
<%= form_for(@user, html: { role: "form" }, builder: BootstrapFormBuilder) do |f| %>

  <%= f.text_field :username, placeholder: "Username" %>

  <%= f.text_field :name, placeholder: "Name" %>

  <%= f.email_field :email, placeholder: "Email" %>

  <%= f.password_field :password, placeholder: "Password", id: "password_field" %>

  <%= f.password_field :password_confirmation, placeholder: "Password" %>

  <%= f.submit_and_cancel(cancel_link(root_path), "Sign up") %>

<% end %>